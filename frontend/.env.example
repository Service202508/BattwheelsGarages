# Battwheels OS - Frontend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# API CONFIGURATION (Required)
# ===========================================
# URL to backend API — no trailing slash
REACT_APP_BACKEND_URL=https://your-production-domain.com

# ===========================================
# SENTRY ERROR MONITORING (Highly Recommended)
# 1. Go to https://sentry.io → New Project → React
# 2. Copy the DSN from project settings
# Without this you are blind to frontend crashes in production
# ===========================================
REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@oNNNNN.ingest.sentry.io/NNNNNNN

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
REACT_APP_ENABLE_AI=true
REACT_APP_ENABLE_CUSTOMER_PORTAL=true

# ===========================================
# VITE / CRA DEV SERVER (Dev only — do not set in production)
# ===========================================
WDS_SOCKET_PORT=443
ENABLE_HEALTH_CHECK=false
